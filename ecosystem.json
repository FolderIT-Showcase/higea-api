{
  "apps": [
    {
      "name": "higea-api",
      "script": "server.js",
      "merge_logs": true,
      "watch": true,
      "ignore_watch": [
        "ecosystem.json",
        ".git",
        "node_modules",
        "bower_components",
        "static",
        "frontend",
        "public"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "env": {
        "NODE_ENV": "development",
        "PORT": "80"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "3002"
      }
    }
  ],
  "deploy": {
    "production": {
      "key": "/c/Users/migue/.ssh/id_rsa",
      "user": "root",
      "ssh_options": "StrictHostKeyChecking=no",
      "host": "higea.folderit.net",
      "repo": "https://github.com/FolderIT/higea-api.git",
      "ref": "origin/master",
      "path": "/var/www/html/higea.folderit.net/higea-api",
      "pre-deploy": "git pull",
      "post-deploy": "npm install && bower install --allow-root && gulp frontend && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}